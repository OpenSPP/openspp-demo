<odoo>
    <record id="view_spp_opencrvs_config_tree" model="ir.ui.view">
        <field name="name">view_spp_opencrvs_config_tree</field>
        <field name="model">spp.opencrvs.config</field>
        <field name="priority">1</field>
        <field name="arch" type="xml">
            <tree editable="bottom">
                <field name="name" />
                <field name="domain" />
                <field name="client_id" />
                <field name="client_secret" />
                <field name="auth_token_url" />
                <field name="auth_token" password="True" readonly="1" force_save="1" />
                <field name="is_active" />
                <button
                    name="on_authenticate"
                    type="object"
                    icon="fa-key"
                    class="btn-success"
                    groups="g2p_registry_base.group_g2p_admin"
                    attrs="{'invisible': [('auth_token', '!=', False)]}"
                />
            </tree>
        </field>
    </record>

    <record id="action_spp_opencrvs_config" model="ir.actions.act_window">
        <field name="name">OpenCRVS Configuration</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">spp.opencrvs.config</field>
        <field name="view_mode">tree</field>
        <field name="context">{}</field>
        <field name="domain">[]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new OpenCRVS Configuration!
            </p><p>
                Click the create button to enter the configuration of the OpenCRVS.
            </p>
        </field>
    </record>

    <record id="action_spp_opencrvs_config_tree_view" model="ir.actions.act_window.view">
        <field name="sequence" eval="1" />
        <field name="view_mode">tree</field>
        <field name="view_id" ref="view_spp_opencrvs_config_tree" />
        <field name="act_window_id" ref="action_spp_opencrvs_config" />
    </record>

    <menuitem
        id="menu_spp_opencrvs_config"
        name="Configuration"
        action="action_spp_opencrvs_config"
        parent="spp_opencrvs_demo.spp_opencrvs_main_menu_root"
        sequence="20"
        groups="g2p_registry_base.group_g2p_admin"
    />
</odoo>
