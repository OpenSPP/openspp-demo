<odoo>
    <record id="view_spp_opencrvs_import_tree" model="ir.ui.view">
        <field name="name">view_spp_opencrvs_import_tree</field>
        <field name="model">spp.opencrvs.import</field>
        <field name="priority">1</field>
        <field name="arch" type="xml">
            <tree>
                <field name="import_by" />
                <field name="name" string="BRN" />
                <field
                    name="state"
                    decoration-info="state=='Draft'"
                    decoration-success="state=='Fetched'"
                    decoration-primary="state=='Imported'"
                    decoration-danger="state=='Cancelled'"
                    widget="badge"
                    string="Status"
                />
            </tree>
        </field>
    </record>

    <record id="view_spp_opencrvs_import_form" model="ir.ui.view">
        <field name="name">view_spp_opencrvs_import_form</field>
        <field name="model">spp.opencrvs.import</field>
        <field name="priority">100</field>
        <field name="arch" type="xml">
            <form string="OpenCRVS Import">
                <header>
                    <button
                        name="fetch_data_opencrvs"
                        type="object"
                        icon="fa-refresh"
                        class="btn-success"
                        string="Fetch Data"
                        states="Draft"
                        groups="g2p_registry_base.group_g2p_admin"
                    />
                    <button
                        name="import_data"
                        type="object"
                        icon="fa-refresh"
                        class="btn-primary"
                        string="Import Data"
                        states="Fetched"
                        groups="g2p_registry_base.group_g2p_admin"
                    />
                    <button
                        name="cancel_import"
                        type="object"
                        icon="fa-times"
                        class="btn-danger"
                        string="Cancel"
                        states="Draft"
                        groups="g2p_registry_base.group_g2p_admin"
                    />
                    <field
                        name="state"
                        widget="statusbar"
                        statusbar_visible="Draft,Fetched,Imported,Cancelled"
                    />
                </header>
                <div
                    class="alert alert-success text-center o_form_header"
                    role="status"
                    attrs="{'invisible': [('state', '!=', 'Imported')]}"
                >
                    <span>OpenCRVS data was successfully imported to CR: </span>
                    <field name="cr_id" class="o_stat_value" />
                </div>
                <sheet>
                    <div class="oe_title mb24">
                        <label for="import_by" string="Import By:" />
                        <h1>
                            <field id="import_by" name="import_by" />
                        </h1>
                        <label for="name" string="BRN:" attrs="{'invisible': [('import_by', '!=', 'BRN')]}" />
                        <h1>
                            <field
                                id="name"
                                name="name"
                                attrs="{'invisible': [('import_by', '!=', 'BRN')]}"
                            />
                        </h1>
                        <label for="config_id" string="Config:" />
                        <h3>
                            <field id="config_id" name="config_id" />
                        </h3>
                    </div>
                    <notebook>
                        <page string="Response">
                            <group>
                                <field name="response" readonly="1" force_save="1" />
                            </group>
                            <group>
                                <group>
                                    <field name="first_name" readonly="1" force_save="1" />
                                    <field name="family_name" readonly="1" force_save="1" />
                                    <field name="date_of_birth" readonly="1" force_save="1" />
                                </group>
                                <group>
                                    <field name="group_id" options="{'no_create': True,'no_open':True}" />
                                    <field name="applicant_id_domain" invisible="1" />
                                    <field
                                        name="applicant_id"
                                        domain="applicant_id_domain"
                                        options="{'no_create': True,'no_open':True}"
                                    />
                                    <field name="applicant_phone" />
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="spp_opencrvs_import_filter" model="ir.ui.view">
        <field name="name">spp_opencrvs_import_filter</field>
        <field name="model">spp.opencrvs.import</field>
        <field name="priority" eval="1" />
        <field name="arch" type="xml">
            <search string="Search OpenCRVS Import">
                <field name="name" />
            </search>
        </field>
    </record>

    <record id="action_spp_opencrvs_import" model="ir.actions.act_window">
        <field name="name">OpenCRVS Import</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">spp.opencrvs.import</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="domain">[]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new OpenCRVS Import!
            </p><p>
                Click the create button to enter the information of the OpenCRVS Import.
            </p>
        </field>
    </record>

    <record id="action_spp_opencrvs_import_tree_view" model="ir.actions.act_window.view">
        <field name="sequence" eval="1" />
        <field name="view_mode">tree</field>
        <field name="view_id" ref="view_spp_opencrvs_import_tree" />
        <field name="act_window_id" ref="action_spp_opencrvs_import" />
    </record>

    <record id="action_spp_opencrvs_import_form_view" model="ir.actions.act_window.view">
        <field name="sequence" eval="1" />
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_spp_opencrvs_import_form" />
        <field name="act_window_id" ref="action_spp_opencrvs_import" />
    </record>

    <menuitem
        id="menu_spp_opencrvs_import"
        name="Import"
        action="action_spp_opencrvs_import"
        parent="spp_opencrvs_demo.spp_opencrvs_main_menu_root"
        sequence="10"
        groups="g2p_registry_base.group_g2p_admin"
    />
</odoo>
