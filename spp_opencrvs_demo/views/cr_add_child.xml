<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="view_change_request_add_child_crvs_form" model="ir.ui.view">
        <field name="name">view_change_request_add_child_crvs_form</field>
        <field name="model">spp.opencrvs.cr.add.child</field>
        <field name="priority">1000</field>
        <field name="inherit_id" ref="spp_opencrvs_cr_add_child.view_change_request_add_child_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='id_document_details']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//page[1]" position="before">
                <page string="OpenCRVS">
                    <group>
                        <group>
                            <field name="brn" />
                            <field name="crvs_qr" />
                        </group>
                        <group>
                            <field name="crvs_record_id" />
                            <button
                                name="fetch_data_from_opencrvs"
                                type="object"
                                string="Fetch Data"
                                class="btn-primary"
                            />
                        </group>
                        <field name="crvs_config_id" invisible="1" />
                    </group>

                </page>
            </xpath>
        </field>
    </record>

</odoo>
